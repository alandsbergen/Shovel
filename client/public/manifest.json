{
  "short_name": "Shovel",
  "name": "Shovel",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "shovel.png",
    "default_title": "Shovel"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting"],
  "icons": {
    "16": "shovel.png",
    "48": "shovel.png",
    "128": "shovel.png"
  }
}
